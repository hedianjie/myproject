						// "offset" : "40px",
      //                   "support": true,
      //                   "color": "#ff3333",
      //                   "style": "circle"
      //               }
      //           }
            }
		}
		/**
		 * 订单列表
		 */
	    ,{
            "path" : "pages/order/index",
            "style" : {
				"navigationBarTitleText":"我的订单"
			}
        }
		/**
		 * 创建订单
		 */
        ,{
            "path" : "pages/createOrder/index",
            "style" : {
				"navigationBarTitleText":"创建订单",
				"navigationBarBackgroundColor":"#007AFF",
				"navigationBarTextStyle": "white"
			}
        }
		/**
		 * 订单备注 （修改 / 添加）
		 */
        ,{
            "path" : "pages/remarkInfo/index",
            "style" : {
				"navigationBarTitleText":"订单备注",
				"navigationBarBackgroundColor":"#007AFF",
				"navigationBarTextStyle": "white"
			}
        }
		/**
		 * 地址列表 （查看 / 选择）
		 */
        ,{
            "path" : "pages/addressList/index",
            "style" : {
				"navigationBarBackgroundColor":"#007AFF",
				"navigationBarTextStyle": "white"
			}
        }
		/**
