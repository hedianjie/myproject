		"backgroundColor": "#F8F9FA",
		"animationType": "slide-in-right",
		"animationDuration": 200
	},
	"tabBar": {
		"backgroundColor":"#FFFFFF",
		"borderStyle":"black",
		"color":"#666666",
		"selectedColor":"#222222",
		"list": [
			{
				"pagePath":"pages/index/index",
				"text":"首页"
			},
			{
				"pagePath":"pages/order/index",
				"text":"订单"
			}
		]
